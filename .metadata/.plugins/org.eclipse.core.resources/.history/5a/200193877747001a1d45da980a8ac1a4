import java.util.Scanner;
import java.util.Random;

public class hilo {

	public static void main(String[] args) {
		
		Scanner guess = new Scanner(System.in);
		Random rand = new Random();
		
		int numguess = 1;
		int maxval = 100;
		int various;
		
		System.out.println("Number Guesser");
		various = rand.nextInt(maxval);
		
		while (numguess > 0 && numguess <= 100 && numguess!=various) {
			System.out.print("Choose a number: ");
			numguess = guess.nextInt();
			System.out.print(various);
			
			if (numguess > various) {
				System.out.println("Too high. Try Again");
			} else if (numguess < various) {
				System.out.println("Too low. Try Again");
			} else {
				System.out.print("You have chosen the right number!");
				// insert restart mechanism
			}
			
		}

	}

}
